---
const formError = Astro.url.searchParams.get("error");
---

<!doctype html>
<html lang="es">
    <head>
        <title>Login</title>
        <meta charset="UTF-8" />
    </head>
    <body class="p-8 max-w-md mx-auto">
        <h1 class="text-xl font-bold mb-4">Acceso al Panel</h1>

        <form method="POST" action="/api/login" class="space-y-4">
            <input
                type="text"
                name="username"
                placeholder="Usuario"
                class="border px-3 py-2 w-full rounded"
                required
            />
            <input
                type="password"
                name="password"
                placeholder="ContraseÃ±a"
                class="border px-3 py-2 w-full rounded"
                required
            />
            <button
                type="submit"
                class="bg-blue-600 text-white px-4 py-2 rounded"
            >
                Entrar
            </button>
            {formError && <p class="text-red-500">Clave incorrecta</p>}
        </form>
    </body>
</html>

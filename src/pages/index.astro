---
import Nav from "../components/Nav/Nav.astro";
import Layout from "../layouts/Layout.astro";
import { Ruleta } from "@/components/ruleta/ruleta";
import { LoginGoogleButton } from "@/pages/dashboardAdmin/components/LoginGoogleButton";
import { getSessionFromRequest } from "@/pages/api/check-session";

const session = getSessionFromRequest(Astro.request);
const isLoggedIn = session !== null;
---

<Layout>
	<Nav />
	{
		isLoggedIn ? (
			<Ruleta client:only="react" />
		) : (
			<LoginGoogleButton client:only="react" />
		)
	}
</Layout>
